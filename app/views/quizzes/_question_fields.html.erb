<div class="span6 offset3 question_box">
	<fieldset class="question fields">
	<h2>Question</h2><h2><%= link_to_remove_fields("(Remove)", f, class: "remove_question") %></h2>


	<%= f.label :category, "Type", class: "control-label" %>
	<%= f.select :category, [['-- Choose a Type --', 'null'], ['True/False', 'tf'], ["Fill in the Blank", 'fill'], ["Multiple Choice Dropdown", "multi"], ["Multiple Choice Radio Button", "multiList"]], {}, onChange: "javascript: changeType(this)", class: "questiontype form-control" %>

	<%= f.label :content, "Question", class: "control-label" %>
	<%= f.text_field :content, class: "form-control" %>

	<%= f.fields_for :answers do |u| %>
		<%= render 'answer_fields', :f => u %>
	<% end %>

	<div class="add_answer_button"><%= link_to_add_fields("Add Another Answer", f, :answers, class: "btn btn-primary add_button") %></div>

	<%= f.label :explanation, "Explanation", class: "control-label" %>
	<%= f.text_field :explanation, class: "form-control" %>
	</fieldset>
</div>