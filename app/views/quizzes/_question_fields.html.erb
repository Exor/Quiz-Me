<div class="span6 offset3">
	<fieldset class="question fields">
	<h2>Question <%= link_to_remove_fields("(Remove)", f) %></h2>


	<%= f.label :category, "Type" %>
	<%= f.select :category, [['-- Choose a Type --', 'null'], ['True/False', 'tf'], ["Fill in the Blank", 'fill'], ["Multiple Choice Dropdown", "multi"], ["Multiple Choice Radio Button", "multiList"]], {}, onChange: "javascript: changeType(this)", class: "questiontype" %>

	<%= f.label :content, "Question" %>
	<%= f.text_field :content %>

	<%= f.fields_for :answers do |u| %>
		<%= render 'answer_fields', :f => u %>
	<% end %>

	<div><%= link_to_add_fields("Add Another Answer", f, :answers, class: "btn btn-primary") %></div>

	<%= f.label :explanation, "Explanation" %>
	<%= f.text_field :explanation %>
	</fieldset>
</div>