<%= form_for(@quiz) do |f| %>
	<div class="row">
		<%= render 'shared/error_messages', object: f.object %>
		<div class="span5">
			<fieldset>
			<%= f.label :name, "Title" %>
			<%= f.text_field :name, placeholder: "Name of your quiz" %>
			
			<%= f.label :description %>
			<%= f.text_field :description, placeholder: "Describe your quiz" %>
			
			<%= f.label :help_text, "Help Text" %>
			<%= f.text_field :help_text, placeholder: "Give a few hints for the quiz taker" %>
			</fieldset>
		</div>
		<div class="span4">
			<fieldset>
				<h2>Options</h2>
				<%= f.check_box :random, 		id: "random" %>Questions are in random order<br />
				<%= f.check_box :allow_restart, id: "allow_restart" %>Allow users to restart the quiz<br />
				<%= f.check_box :allow_delete, 	id: "allow_delete" %>Allow users to delete the quiz<br />
				<%= f.check_box :allow_review, 	id: "allow_review" %>Allow users to review the quiz<br />
				<%= f.check_box :show_answer, 	id: "show_answer" %>Show the correct answer when users submit their answer<br />
				<%= f.check_box :show_explaination, id: "show_explaination" %>Show the answer explaination when users submit their answer<br />
			</fieldset>
		</div>
		<div class="span3">
			<%= f.submit "#{buttontext} my Quiz!", class: "btn btn-large btn-prmary" %>
		</div>
	</div>
	<div class="row">
		<div class="span4 offset 4">
			<% @quiz.questions.each do |question| %>
				<%= f.fields_for :questions, question do |u| %>
					<fieldset>
						<h2>Question <%= question.number %></h2>
							<%= u.label :category, "Type" %>
							<%= u.select :category, [['True/False', 'tf'], ["Fill in the Blank", 'fill'], ["Multiple Choice", "multi"]] %>

							<%= u.label :content, "Question" %>
							<%= u.text_field :content %>
							
							<%= u.label :fill_answer, "Fill Answer" %>
							<%= u.text_field :fill_answer %>
							
							<%= u.label :tf_answer, "True False Answer" %>
							<%= u.radio_button :tf_answer, 't' %>True
							<%= u.radio_button :tf_answer, 'f' %>False
							
							<%= u.label :multiple_answer, "Multiple Choice Answer" %>
							<%= u.text_field :multiple_answer %>
							
							<%= u.label :explaination, "Explanation" %>
							<%= u.text_field :explaination %>

							<br =>Delete<%= u.check_box :_destroy %>
					</fieldset>
				<% end %>
			<% end %>
		</div>
	</div>
<% end %>
