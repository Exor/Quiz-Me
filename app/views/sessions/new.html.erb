<% provide(:title, "Sign in") %>

<div class="container">
	<%= form_for(:session, url: sessions_path, html: {class: "form-signin"}) do |f| %>
		<h1 class="form-signin-heading">Sign in</h1>
		<%= f.text_field :username, autofocus: true, required: true, placeholder: "Username", class: "form-control" %>

		<%= f.password_field :password, required: true, placeholder: "Password", class: "form-control" %>

		<%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
	<% end %>
</div>